{
  "$schema": "http://json-schema.org/draft-03/schema#",
  "type": "object",
  "properties": {
    "package": {
      "type": "string",
      "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
    },
    "config": {
      "type": "object",
      "properties": {
        "resolvers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "hostname": {
          "description": "hostname for the zone/vm",
          "type": "string",
          "pattern": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9\\-]*[A-Za-z0-9])$"
        },
        "alias": {
          "type": "string",
          "pattern": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9\\-]*[A-Za-z0-9])$"
        },
        "remove_nics": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "pattern": "^([0-9A-F]{2}[:-]){5}([0-9A-F]{2})$"
          }
        },
        "add_nics": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "allow_dhcp_spoofing": {
                "type": "boolean"
              },
              "allow_ip_spoofing": {
                "type": "boolean"
              },
              "allow_mac_spoofing": {
                "type": "boolean"
              },
              "allow_restricted_traffic": {
                "type": "boolean"
              },
              "allow_unfiltered_promisc": {
                "type": "boolean"
              },
              "blocked_outgoing_ports": {
                "type": "array",
                "items": {
                  "type": "integer"
                }
              },
              "allowed_ips": {
                "type": "array",
                "items": {
                  "type": "string",
                  "pattern": "^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)(?:/(?:[0-9]|[1-2][0-9]|3[0-2]))?$"
                }
              },
              "dhcp_server": {
                "type": "boolean"
              },
              "gateway": {
                "type": "string",
                "pattern": "^(?:(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)|nics\\[\\d+\\])$"
              },
              "ip": {
                "type": "string",
                "pattern": "^(?:(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)|nics\\[\\d+\\])|dhcp$",
                "required": true
              },
              "model": {
                "type": "string"
              },
              "mtu": {
                "type": "integer",
                "minimum": 1500,
                "maximum": 9000
              },
              "netmask": {
                "type": "string"
              },
              "network_uuid": {
                "type": "string",
                "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
              },
              "nic_tag": {
                "type": "string",
                "required": true
              },
              "primary": {
                "type": "boolean"
              },
              "vlan_id": {
                "type": "integer",
                "minimum": 0,
                "maximum": 4095
              },
              "vrrp_primary_ip": {
                "type": "string",
                "pattern": "^(?:(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)|nics\\[\\d+\\])$"
              },
              "vrrp_vrid": {
                "type": "integer",
                "minimum": 0,
                "maximum": 255
              }
            }
          }
        },
        "update_nics": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "autoboot": {
          "type": "boolean"
        },
        "max_swap": {
          "type": "integer"
        },
        "set_routes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "patternProperties": {
              "^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)(?:/(?:[0-9]|[1-2][0-9]|3[0-2]))?$": {
                "pattern": "^(?:(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)|nics\\[\\d+\\])$"
              }
            }
          }
        },
        "remove_routes": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)(?:/(?:[0-9]|[1-2][0-9]|3[0-2]))?$"
          }
        },
        "ssh_keys": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "metadata": {
          "type": "object"
        },
        "owner": {
          "type": "string",
          "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
        }
      }
    }
  }
}
